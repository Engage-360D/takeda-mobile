<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/middle_block_hight"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageViewResultLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/middle_margin"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/result_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageViewResultLine"
        android:layout_alignRight="@id/imageViewResultLine"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="@dimen/small_margin"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageViewResultCircleBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/result_circle_bg" />

            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="XX%"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/very_soft_blue" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>