<resources>
    <!-- ========== -->
    <!-- imageviews -->
    <!-- ========== -->
    <style name="ImageViewTop" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- ========= -->
    <!-- textviews -->
    <!-- ========= -->
    <style name="TextViewMedium37" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/ca_text_size_medium</item>
        <item name="android:textColor">@color/ca_text_main_37</item>
    </style>

    <style name="TextViewMedium38" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/ca_text_size_medium</item>
        <item name="android:textColor">@color/ca_text_main_38</item>
    </style>

    <style name="TextViewTop" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_plate_medium</item>
        <item name="android:textSize">@dimen/ca_text_size_large</item>
        <item name="android:textColor">@color/ca_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/ca_bg_top</item>
    </style>

    <style name="TextViewTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_plate_medium</item>
        <item name="android:textSize">@dimen/ca_text_size_xxlarge</item>
        <item name="android:textColor">@color/ca_text_main_37</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_plate_medium</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/ca_text_main_48</item>
        <item name="android:textColorHint">@color/ca_text_main_48_hint</item>
        <item name="android:textSize">@dimen/ca_text_size_xlarge</item>
    </style>

    <style name="TextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_plate_medium</item>
        <item name="android:background">@drawable/ca_selector_list_item_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/ca_space_medium</item>
        <item name="android:paddingRight">@dimen/ca_space_medium</item>
        <item name="android:textColor">@color/ca_selector_list_item_text</item>
        <item name="android:textSize">@dimen/ca_text_size_medium</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="TextViewItemDrawable" parent="@style/TextViewItem">
        <item name="android:drawableRight">@drawable/ca_selector_list_item_ic</item>
    </style>

    <!-- ======== -->
    <!-- dividers -->
    <!-- ======== -->
    <style name="divider_normal_1_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_divider_1</item>
        <item name="android:background">@color/ca_divider_1</item>
    </style>

    <style name="divider_normal_1_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_divider_1</item>
        <item name="android:background">@color/ca_divider_2</item>
    </style>

    <style name="divider_normal_1_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_divider_1</item>
        <item name="android:background">@color/ca_divider_3</item>
    </style>

    <style name="divider_normal_1_5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_divider_1</item>
        <item name="android:background">@color/ca_divider_5</item>
    </style>

    <style name="divider_normal_1_6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_normal_hight</item>
        <item name="android:background">@color/ca_divider_6</item>
    </style>

    <style name="divider_normal_1_7">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_normal_hight</item>
        <item name="android:background">@color/ca_divider_7</item>
    </style>

    <!-- ==== -->
    <!-- gaps -->
    <!-- ==== -->
    <style name="gapa_vertical_plate_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_plate_small</item>
        <item name="android:background">@null</item>
    </style>

    <style name="gapa_vertical_plate_xsmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_plate_xsmall</item>
        <item name="android:background">@null</item>
    </style>

    <style name="gapa_vertical_plate_xxxlarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_plate_xxxlarge</item>
        <item name="android:background">@null</item>
    </style>

    <style name="gapa_vertical_space_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_space_small</item>
        <item name="android:background">@null</item>
    </style>

    <style name="gapa_vertical_space_xsmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_space_xsmall</item>
        <item name="android:background">@null</item>
    </style>

    <!-- ======= -->
    <!-- buttons -->
    <!-- ======= -->
    <style name="ButtonBase37" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/ca_text_size_medium</item>
        <item name="android:textColor">@color/ca_text_main_37</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="button_main_short">
        <item name="android:layout_width">@dimen/ca_control_medium</item>
        <item name="android:layout_height">@dimen/ca_plate_medium</item>
        <item name="android:background">@drawable/ca_selector_button_main</item>
        <item name="android:textSize">@dimen/ca_text_size_medium</item>
        <item name="android:textColor">@color/ca_selector_button_main_text</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="button_main_long" parent="@style/button_main_short">
        <item name="android:layout_width">@dimen/ca_control_xlarge</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/ca_selector_checkbox</item>
        <item name="android:drawablePadding">@dimen/ca_space_xxsmall</item>
        <item name="android:textColor">@color/ca_text_main_41</item>
        <item name="android:textSize">@dimen/ca_text_size_small</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


    <style name="ToggleRadioButton" parent="@android:style/Widget.Button.Toggle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ca_selector_checkbox_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">onToggle</item>
        <item name="android:textColor">@drawable/ca_selector_checkbox_text</item>
        <item name="android:textSize">@dimen/ca_text_size_small</item>
    </style>

</resources>