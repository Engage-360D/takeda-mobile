<resources>

    <style name="divider_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_menu_hight</item>
        <item name="android:background">@drawable/divider_menu</item>
    </style>

    <style name="divider_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_content_hight</item>
        <item name="android:background">@drawable/divider_content</item>
    </style>

    <style name="divider_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_normal_hight</item>
        <item name="android:background">@drawable/divider_normal</item>
    </style>

    <!-- ======================================================================================= -->

    <style name="ButtonBase37" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/ca_text_size_medium</item>
        <item name="android:textColor">@color/ca_text_main_37</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- ========= -->
    <!-- textviews -->
    <!-- ========= -->
    <style name="TextViewMedium37" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/ca_text_size_medium</item>
        <item name="android:textColor">@color/ca_text_main_37</item>
    </style>

    <style name="TextViewMedium38" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/ca_text_size_medium</item>
        <item name="android:textColor">@color/ca_text_main_38</item>
    </style>

    <style name="TextViewTop" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_plate_medium</item>
        <item name="android:textSize">@dimen/ca_text_size_large</item>
        <item name="android:textColor">@color/ca_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/ca_bg_top</item>
    </style>

    <style name="TextViewTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_plate_medium</item>
        <item name="android:textSize">@dimen/ca_text_size_xxlarge</item>
        <item name="android:textColor">@color/ca_text_main_37</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ======== -->
    <!-- dividers -->
    <!-- ======== -->
    <style name="divider_normal_1_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_divider_1</item>
        <item name="android:background">@color/ca_divider_1</item>
    </style>

    <style name="divider_normal_1_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_divider_1</item>
        <item name="android:background">@color/ca_divider_2</item>
    </style>

    <style name="divider_normal_1_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ca_divider_1</item>
        <item name="android:background">@color/ca_divider_3</item>
    </style>

    <!-- ======= -->
    <!-- buttons -->
    <!-- ======= -->
    <style name="button_main_short">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/ca_plate_medium</item>
        <item name="android:background">@drawable/ca_selector_button_main</item>
        <item name="android:textSize">@dimen/ca_text_size_medium</item>
        <item name="android:textColor">@color/ca_selector_button_main_text</item>
        <item name="android:paddingLeft">@dimen/ca_plate_small</item>
        <item name="android:paddingRight">@dimen/ca_plate_small</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="button_main_long" parent="@style/button_main_short">
        <item name="android:paddingLeft">@dimen/ca_plate_xxlarge</item>
        <item name="android:paddingRight">@dimen/ca_plate_xxlarge</item>
    </style>

</resources>