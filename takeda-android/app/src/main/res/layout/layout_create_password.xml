<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ca_space_medium"
    android:paddingRight="@dimen/ca_space_medium">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ca_plate_medium"
        android:gravity="center_vertical"
        android:text="@string/create_password"
        android:textColor="@color/ca_text_main_41"
        android:textSize="@dimen/ca_text_size_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ca_plate_medium"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/enter_the_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/ca_text_main_48"
            android:textColorHint="@color/ca_text_main_48_hint"
            android:textSize="@dimen/ca_text_size_xlarge" />
    </LinearLayout>

</LinearLayout>