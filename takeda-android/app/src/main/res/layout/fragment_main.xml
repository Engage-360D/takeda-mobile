<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <View style="@style/gap_vertical_space_small" />

        <TextView
            android:id="@+id/textViewIndex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/plate_xxlarge"
            android:gravity="center"
            android:text="@string/zero_percent"
            android:textColor="@color/text_main_37"
            android:textSize="@dimen/text_size_percents" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/index_recommendations"
            android:textColor="@color/text_main_37"
            android:textSize="@dimen/text_size_small" />

        <View style="@style/gap_vertical_space_xsmall" />

        <TextView
            android:id="@+id/textViewWeekDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_main_37"
            android:textSize="@dimen/text_size_medium" />

        <View style="@style/gap_vertical_space_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1"
            android:layout_marginLeft="@dimen/space_medium"
            android:layout_marginRight="@dimen/space_medium"
            android:background="@color/divider_1" />

        <TextView
            android:id="@+id/textViewToday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/plate_medium"
            android:gravity="center"
            android:textColor="@color/text_main_37"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <include
        android:id="@+id/textViewFooter"
        layout="@layout/layout_footer_contraindications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayoutTimeline"
        android:layout_width="match_parent"
        android:layout_above="@id/textViewFooter"
        android:layout_below="@id/linearLayoutHeader"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/fragmentContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />

                <include
                    android:id="@+id/textViewMessage"
                    layout="@layout/layout_data_not_found"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/plate_large"
                    android:background="@null" />

                <View style="@style/divider_normal_1_5" />

                <TextView
                    android:id="@+id/textViewMyRecommendations"
                    style="@style/TextViewItemDrawableRR"
                    android:text="@string/my_recommendations" />

                <View style="@style/divider_normal_1_5" />

                <TextView
                    android:id="@+id/textViewMySuccess"
                    style="@style/TextViewItemDrawableRR"
                    android:text="@string/my_success" />

                <View style="@style/divider_normal_1_5" />

                <LinearLayout
                    android:id="@+id/linearLayoutConsolidatedReport"
                    style="@style/TextViewItemClickable">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewItemClickable"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:padding="0dp"
                            android:text="@string/consolidated_report" />

                        <TextView
                            style="@style/TextViewItemClickable"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:padding="0dp"
                            android:text="@string/go_to_website"
                            android:textSize="@dimen/text_size_xsmall" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/selector_list_item_rr_ic" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>