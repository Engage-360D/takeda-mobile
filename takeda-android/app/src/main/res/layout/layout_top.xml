<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/bg_main_38"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayoutLeftHolder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_small_negative"
        android:layout_marginLeft="@dimen/space_medium"
        android:layout_weight="1"
        android:orientation="horizontal">

        <include layout="@layout/layout_top_menu" />

    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_wide_logo" />

    <LinearLayout
        android:id="@+id/linearLayoutRightHolder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_small_negative"
        android:layout_marginRight="@dimen/space_medium"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" />
</LinearLayout>

