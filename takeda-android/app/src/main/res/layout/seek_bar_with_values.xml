<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ru.com.cardiomagnil.widget.CustomSeekBar
        android:id="@+id/customSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textViewMaxValue"
        android:layout_toRightOf="@id/textViewMinValue" />

    <TextView
        android:id="@+id/textViewMinValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/customSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/customSeekBar"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewMaxValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/customSeekBar"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/customSeekBar"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewCurrentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@android:color/white" />

</RelativeLayout>