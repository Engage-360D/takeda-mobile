<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ca_space_xsmall"
    android:baselineAligned="false"
    android:gravity="top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginRight="@dimen/ca_space_small"
        android:layout_marginTop="@dimen/ca_space_xsmall"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/textViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ca_white"
        android:textSize="@dimen/ca_text_size_large" />

</LinearLayout>