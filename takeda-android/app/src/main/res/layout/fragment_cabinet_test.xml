<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewTop"
            android:text="@string/recommendations" />

    </LinearLayout>

    <include
        android:id="@+id/textViewFooter"
        layout="@layout/layout_footer_contraindications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewFooter"
        android:layout_below="@id/linearLayoutHeader"
        android:layout_gravity="center_horizontal"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewMedium37MarginedMedium"
                android:layout_marginBottom="@dimen/space_small"
                android:text="@string/additional_test"
                android:textSize="@dimen/text_size_large" />

            <View
                style="@style/divider_normal_1_7"
                android:layout_marginLeft="@dimen/space_medium"
                android:layout_marginRight="@dimen/space_medium" />

            <TextView
                style="@style/TextViewMedium37MarginedMedium"
                android:layout_marginBottom="@dimen/space_small"
                android:text="@string/cake_ice_cream" />

            <include layout="@layout/layout_radiogroup_test" />

            <View style="@style/gap_vertical_space_small" />

            <TextView
                style="@style/TextViewMedium37MarginedMedium"
                android:layout_marginBottom="@dimen/space_small"
                android:text="@string/fat_cheese" />

            <include layout="@layout/layout_radiogroup_test" />

            <View style="@style/gap_vertical_space_small" />

            <TextView
                style="@style/TextViewMedium37MarginedMedium"
                android:layout_marginBottom="@dimen/space_small"
                android:text="@string/butter_margarine" />

            <include layout="@layout/layout_radiogroup_test" />

            <View style="@style/gap_vertical_space_small" />

            <TextView
                style="@style/TextViewMedium37MarginedMedium"
                android:layout_marginBottom="@dimen/space_small"
                android:text="@string/coconut" />

            <include layout="@layout/layout_radiogroup_test" />

            <View style="@style/gap_vertical_space_small" />

            <TextView
                style="@style/TextViewMedium37MarginedMedium"
                android:layout_marginBottom="@dimen/space_small"
                android:text="@string/fried_food" />

            <include layout="@layout/layout_radiogroup_test" />

            <View style="@style/gap_vertical_space_small" />

            <Button
                android:id="@+id/ButtonGetRecommendations"
                style="@style/button_main_very_long"
                android:text="@string/get_recommendations" />

            <View style="@style/gap_vertical_space_small" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>