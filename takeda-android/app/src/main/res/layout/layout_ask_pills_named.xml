<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutItemLarge">

    <RadioGroup
        android:id="@+id/radioGroupPillsTaken"
        android:layout_width="@dimen/control_medium"
        android:layout_height="@dimen/control_xxsmall"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonPillsNotTaken"
            style="@style/RadioButton"
            android:checked="false"
            android:text="@string/no" />

        <RadioButton
            android:id="@+id/radioButtonPillsTaken"
            style="@style/RadioButton"
            android:checked="false"
            android:text="@string/yes" />
    </RadioGroup>

    <TextView
        android:id="@+id/textViewPillsTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/radioGroupPillsTaken"
        android:textColor="@color/text_main_38"
        android:textSize="@dimen/text_size_small" />

</RelativeLayout>
