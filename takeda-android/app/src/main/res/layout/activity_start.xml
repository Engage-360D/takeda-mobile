<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_38"
    android:orientation="vertical">

    <include
        android:id="@+id/linearLayoutTop"
        layout="@layout/layout_top" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include
        android:id="@+id/textViewBottom"
        layout="@layout/layout_bottom_contraindications"
        android:paddingLeft="@dimen/space_medium"
        android:paddingRight="@dimen/space_medium" />

    <LinearLayout
        android:id="@+id/linearLayoutProgress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/plate_large"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_medium"
        android:paddingRight="@dimen/space_medium">

        <ProgressBar
            android:id="@+id/progressBarBottomOutsideStartWork"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:progress="@integer/scale_animation_time" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/textViewBottomOutsideAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xsmall"
            app:typeface="roboto_regular" />
    </LinearLayout>

</LinearLayout>