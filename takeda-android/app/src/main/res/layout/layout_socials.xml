<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutSocials"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewGP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space_xxsmall"
        android:layout_weight="1"
        android:background="@drawable/selector_social_bg"
        android:contentDescription="@null"
        android:src="@drawable/selector_gp" />

    <ImageView
        android:id="@+id/imageViewVK"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space_xxsmall"
        android:layout_weight="1"
        android:background="@drawable/selector_social_bg"
        android:contentDescription="@null"
        android:src="@drawable/selector_vk" />

    <ImageView
        android:id="@+id/imageViewFB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space_xxsmall"
        android:layout_weight="1"
        android:background="@drawable/selector_social_bg"
        android:contentDescription="@null"
        android:src="@drawable/selector_fb" />

    <ImageView
        android:id="@+id/imageViewOK"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_social_bg"
        android:contentDescription="@null"
        android:src="@drawable/selector_ok" />

</LinearLayout>