<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/TextViewTitle"
            android:text="@string/entry" />

        <include layout="@layout/ca_layout_vertical_gap_space_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ca_plate_medium"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/login_email"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/ca_text_main_38"
                android:textColorHint="@color/ca_text_main_38_hint"
                android:textSize="@dimen/ca_text_size_xlarge">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ca_plate_medium"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/ca_text_main_38"
                android:textColorHint="@color/ca_text_main_38_hint"
                android:textSize="@dimen/ca_text_size_xlarge" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutPerformRestore"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ca_plate_medium"
            android:layout_gravity="right"
            android:gravity="right|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textColor="@color/ca_text_main_38"
                android:textSize="@dimen/ca_text_size_small" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/small_dark_right" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/enter" />

        <LinearLayout
            android:id="@+id/linearLayoutSocials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/large_margin">

            <ImageView
                android:id="@+id/imageViewVK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:contentDescription="@null"
                android:src="@drawable/vk" />

            <ImageView
                android:id="@+id/imageViewFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:contentDescription="@null"
                android:src="@drawable/fb" />

            <ImageView
                android:id="@+id/imageViewOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:contentDescription="@null"
                android:src="@drawable/ok" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewIfNoAccoun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/if_no_account"
        android:textColor="@color/ca_text_main_38"
        android:textSize="@dimen/ca_text_size_small" />

</LinearLayout>