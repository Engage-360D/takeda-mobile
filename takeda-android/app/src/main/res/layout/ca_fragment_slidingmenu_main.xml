<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_white">

    <LinearLayout
        android:id="@+id/LinearLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/ca_layout_vertical_gap_small" />

        <TextView
            android:id="@+id/textViewPercents"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ca_plate_xxlarge"
            android:gravity="center"
            android:text="@string/zero_percent"
            android:textColor="@color/ca_text_main_37"
            android:textSize="@dimen/ca_text_size_percent" />

        <TextView
            android:id="@+id/textViewIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/index_recommendations"
            android:textColor="@color/ca_text_main_37"
            android:textSize="@dimen/ca_text_size_small" />

        <include layout="@layout/ca_layout_vertical_gap_xsmall" />

        <TextView
            android:id="@+id/textViewDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="XX date - XX date"
            android:textColor="@color/ca_text_main_37"
            android:textSize="@dimen/ca_text_size_medium" />

        <include layout="@layout/ca_layout_vertical_gap_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ca_divider_1"
            android:layout_marginLeft="@dimen/ca_space_medium"
            android:layout_marginRight="@dimen/ca_space_medium"
            android:background="@color/ca_divider_1" />

        <TextView
            android:id="@+id/textViewToday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ca_plate_medium"
            android:gravity="center"
            android:text="Today is (today is)"
            android:textColor="@color/ca_text_main_37"
            android:textSize="@dimen/ca_text_size_medium" />
    </LinearLayout>

    <include
        android:id="@+id/textViewBottom"
        layout="@layout/layout_bottom_contraindications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewBottom"
        android:layout_below="@id/LinearLayoutTop"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutPhysicalLoad"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ca_plate_medium"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ca_bg_bottom_and_top_border_unpressed"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ca_space_medium"
                android:paddingRight="@dimen/ca_space_medium">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/physical_load"
                    android:textColor="@color/ca_text_main_37"
                    android:textSize="@dimen/ca_text_size_medium" />

                <EditText
                    android:id="@+id/editTextPhysicalLoad"
                    android:layout_width="@dimen/ca_control_medium"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center_vertical|right"
                    android:hint="@string/min"
                    android:inputType="number"
                    android:textColor="@color/ca_text_main_37"
                    android:textColorHint="@color/ca_main_text_37_hint" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutTakeTablets"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ca_plate_medium"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ca_selector_bottom_border"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ca_space_medium"
                android:paddingRight="@dimen/ca_space_medium">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/take_tablets"
                    android:textColor="@color/ca_text_main_37"
                    android:textSize="@dimen/ca_text_size_medium" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/small_dark_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutViewEatenToday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ca_plate_medium"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ca_selector_bottom_border"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ca_space_medium"
                android:paddingRight="@dimen/ca_space_medium">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/eaten_today"
                    android:textColor="@color/ca_text_main_37"
                    android:textSize="@dimen/ca_text_size_medium" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/small_dark_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ca_plate_large"
                android:background="@null" />

            <LinearLayout
                android:id="@+id/linearLayoutMyRecommendations"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ca_plate_medium"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ca_selector_bottom_and_top_border"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ca_space_medium"
                android:paddingRight="@dimen/ca_space_medium">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/my_recommendations"
                    android:textColor="@color/ca_text_main_37"
                    android:textSize="@dimen/ca_text_size_medium" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/small_dark_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutMySuccess"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ca_plate_medium"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ca_selector_bottom_border"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ca_space_medium"
                android:paddingRight="@dimen/ca_space_medium">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/my_success"
                    android:textColor="@color/ca_text_main_37"
                    android:textSize="@dimen/ca_text_size_medium" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/small_dark_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutConsolidatedReport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ca_plate_medium"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ca_selector_bottom_border"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ca_space_medium"
                android:paddingRight="@dimen/ca_space_medium">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/consolidated_report"
                        android:textColor="@color/ca_text_main_37"
                        android:textSize="@dimen/ca_text_size_medium" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/go_to_website"
                        android:textColor="@color/ca_text_main_37"
                        android:textSize="@dimen/ca_text_size_xsmall" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/small_dark_right" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>