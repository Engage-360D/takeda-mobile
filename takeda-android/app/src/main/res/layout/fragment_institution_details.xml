<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHeader"
            style="@style/TextViewTop"
            android:text="@string/institutions" />

    </LinearLayout>

    <include
        android:id="@+id/textViewFooter"
        layout="@layout/layout_footer_contraindications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:id="@+id/fragmentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewFooter"
        android:layout_below="@id/linearLayoutHeader"
        android:layout_gravity="center_horizontal"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/gap_vertical_plate_xsmall" />

            <TextView
                android:id="@+id/textViewInstitutionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_medium"
                android:paddingRight="@dimen/space_medium"
                android:textColor="@color/text_main_41"
                android:textSize="@dimen/text_size_medium" />

            <View style="@style/gap_vertical_plate_xsmall" />

            <TextView
                android:id="@+id/textViewInstitutionAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_medium"
                android:paddingRight="@dimen/space_medium"
                android:textColor="@color/selector_clickable_text_48"
                android:textSize="@dimen/text_size_small" />

            <View style="@style/gap_vertical_plate_xsmall" />

            <LinearLayout
                android:id="@+id/linearLayoutContentHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <View style="@style/gap_vertical_plate_xsmall" />

            <TextView
                android:id="@+id/textViewBestInstitution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_best_institution"
                android:drawablePadding="@dimen/space_medium"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_medium"
                android:paddingRight="@dimen/space_medium"
                android:text="@string/best_institution"
                android:textColor="@color/selector_clickable_text_48"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/textViewMessage"
        layout="@layout/layout_data_not_found"
        android:visibility="gone" />

</RelativeLayout>