<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plate_large"
    android:background="@color/bg_main_38"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_medium"
        android:paddingRight="@dimen/space_medium">

        <ImageView
            android:id="@+id/imageViewBottomInsideLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/space_medium"
            android:contentDescription="@null"
            android:src="@drawable/ic_small_light_left" />

        <TextView
            android:id="@+id/textViewBottomInsideAction"
            android:layout_width="wrap_content"
            style="@style/TextViewTestSmall" />

        <ImageView
            android:id="@+id/imageViewBottomInsideRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_medium"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:src="@drawable/ic_small_light_right" />
    </LinearLayout>

</LinearLayout>

