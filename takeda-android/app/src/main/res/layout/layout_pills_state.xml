<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plate_medium"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/space_medium"
    android:paddingRight="@dimen/space_medium">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/pill_condition"
        android:textColor="@color/text_main_37"
        android:textSize="@dimen/text_size_medium" />

    <RadioGroup
        android:id="@+id/radioGroupStillSmoke"
        android:layout_width="@dimen/control_medium"
        android:layout_height="@dimen/control_xxsmall"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/toggleButtonConditionOn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_checkbox_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/on"
            android:textColor="@drawable/selector_checkbox_text"
            android:textSize="@dimen/text_size_small" />

        <RadioButton
            android:id="@+id/toggleButtonConditionOff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_checkbox_bg"
            android:button="@null"
            android:gravity="center"
            android:text="@string/off"
            android:textColor="@drawable/selector_checkbox_text"
            android:textSize="@dimen/text_size_small" />
    </RadioGroup>
</LinearLayout>