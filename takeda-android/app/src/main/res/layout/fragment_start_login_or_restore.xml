<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/large_padding"
    android:paddingRight="@dimen/large_padding" >

    <RelativeLayout
        android:id="@+id/relativeLayoutLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true" >

        <TextView
            android:id="@+id/textViewIfNoAccoun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding"
            android:text="@string/if_no_account"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/very_dark_grayish_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/textViewIfNoAccoun"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/xlarge_margin"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:gravity="center_horizontal"
                android:text="@string/entry"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/very_dark_grayish_blue" />

            <EditText
                android:id="@+id/editTextEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/login_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/very_dark_grayish_blue" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/very_dark_grayish_blue" />

            <LinearLayout
                android:id="@+id/linearLayoutRestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/middle_margin"
                android:layout_marginTop="@dimen/middle_margin"
                android:gravity="right|center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_password"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/very_dark_grayish_blue" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/small_dark_right" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonEnter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/enter" />

            <LinearLayout
                android:id="@+id/linearLayoutSocials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/large_margin" >

                <ImageView
                    android:id="@+id/imageViewVK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/vk" />

                <ImageView
                    android:id="@+id/imageViewFB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/fb" />

                <ImageView
                    android:id="@+id/imageViewOK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/ok" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!--  -->

    <RelativeLayout
        android:id="@+id/relativeLayoutRestore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textViewRestoringInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding"
            android:text="@string/restoring_info"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/very_dark_grayish_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/textViewRestoringInfo"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/xlarge_margin"
                android:layout_marginLeft="@dimen/large_margin"
                android:layout_marginRight="@dimen/large_margin"
                android:gravity="center_horizontal"
                android:text="@string/restoring_password"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/very_dark_grayish_blue" />

            <EditText
                android:id="@+id/editTextEmailRestore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/login_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/very_dark_grayish_blue" >

                <requestFocus />
            </EditText>

            <LinearLayout
                android:id="@+id/linearLayoutLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/middle_margin"
                android:layout_marginTop="@dimen/middle_margin"
                android:gravity="right|center_vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/small_dark_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/entry"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/very_dark_grayish_blue" />
            </LinearLayout>

            <Button
                android:id="@+id/buttonRestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/restore" />
        </LinearLayout>
    </RelativeLayout>

    <!--  -->

</RelativeLayout>