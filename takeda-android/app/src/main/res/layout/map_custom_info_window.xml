<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/info_bubble"
    android:orientation="vertical"
    android:padding="@dimen/space_medium">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="false"
        android:textColor="@color/text_main_38"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/textViewSnippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="false"
        android:textColor="@color/text_main_38"
        android:textSize="@dimen/text_size_small" />

    <View style="@style/divider_normal_1_1" />

    <TextView
        android:id="@+id/textViewMoreDetails"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/plate_medium"
        android:layout_gravity="center"
        android:drawableRight="@drawable/ic_small_dark_right"
        android:gravity="center"
        android:text="@string/more_details"
        android:textColor="@color/selector_clickable_text_38"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>